{
	"dependencies": {
		"@tauri-apps/api": "^1.0.0-beta.1",
		"@tauri-apps/cli": "^1.0.0-beta.2"
	},
	"devDependencies": {
		"autoprefixer": "^10.2.6",
		"elm": "^0.19.1-5",
		"elm-analyse": "^0.16.5",
		"elm-format": "^0.8.5",
		"elm-live": "^4.0.2",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.3.0",
		"postcss-cli": "^8.3.1",
		"prettier": "^2.3.0",
		"tailwindcss": "^2.1.2"
	},
	"scripts": {
		"tauri": "tauri",
		"tdev": "run-p :dev :tauri-dev",
		"dev": "run-p :tailwind-watch :elm-live",
		"fmt": "elm-format src --yes",
		":elm-live": "elm-live --start-page=index.html --dir=./static/ ./src/Main.elm -- --output=./static/index.js",
		":tauri-dev": "tauri dev",
		":tailwind-watch": "NODE_ENV=development postcss src/main.css -o ./static/index.css -w"
	},
	"prettier": {
		"useTabs": true
	}
}
